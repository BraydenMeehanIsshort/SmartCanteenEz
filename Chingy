  color: #333;
  text-align: center;
  padding: 20px;
}
#login-container, #order-container {
  max-width: 500px;
  margin: auto;
  background: white;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

<!-- firebase-config.js -->
const firebaseConfig = {
  apiKey: "YOUR_API_KEY",
  authDomain: "YOUR_AUTH_DOMAIN",
  projectId: "YOUR_PROJECT_ID",
  storageBucket: "YOUR_STORAGE_BUCKET",
  messagingSenderId: "YOUR_MSG_ID",
  appId: "YOUR_APP_ID"
};

const app = firebase.initializeApp(firebaseConfig);
const auth = firebase.auth();
const db = firebase.firestore();

<!-- script.js -->
document.getElementById('login-btn').addEventListener('click', () => {
  const provider = new firebase.auth.GoogleAuthProvider();
  auth.signInWithPopup(provider)
    .then(result => {
      document.getElementById('login-container').style.display = 'none';
      document.getElementById('order-container').style.display = 'block';
      document.getElementById('user-name').textContent = result.user.displayName;
    });
});

document.getElementById('order-form').addEventListener('submit', (e) => {
  e.preventDefault();

  const year = document.getElementById('year').value;
  const studentClass = document.getElementById('class').value;
  const period = document.getElementById('period').value;
  const items = [...document.querySelectorAll('input[name="item"]:checked')].map(cb => cb.value);

  const user = auth.currentUser;

  if (user && year && studentClass && period && items.length > 0) {
    db.collection('orders').add({
      name: user.displayName,
      email: user.email,
      year,
      class: studentClass,
      period,
      items,
      timestamp: firebase.firestore.FieldValue.serverTimestamp()
    }).then(() => {
      alert('Order placed successfully!');
      document.getElementById('order-form').reset();
    });
  } else {
    alert('Please complete all fields and select at least one item.');
  }
});
